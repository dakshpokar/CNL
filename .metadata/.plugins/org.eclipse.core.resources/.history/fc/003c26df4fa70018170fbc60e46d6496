	my_addr.sin_port = htons(MYPORT);
	my_addr.sin_addr.s_addr = INADDR_ANY;
	memset(&(my_addr.sin_zero), 0, 8);
	if(bind(sockfd,my_addr,addr_len) == -1){
		perror("bind");
		exit(1);
	}
