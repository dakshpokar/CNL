#include<iostream>
#include<vector>
#include<math.h>
using namespace std;
class HammingCodes
{
private:
	char a;
	int m;
	int r;
	vector<int> rbitSet;
	vector<int> bitSet;
	vector<int> :: iterator i;
public:
	HammingCodes(){
		a = 'n';
		m = 0;
		r = 0;
	}
	void getInput(){
		cout<<"\nEnter a character to transfer: ";
		cin>>a;
		convertInput();
	}
	void convertInput(){
		int x = (int)a;
		int bit;
		while(x!=0)
		{
			bit = x % 2;
			x = x / 2;
			rbitSet.push_back(bit);
		}
		if(rbitSet.size() < 8){
			rbitSet.push_back(0);
		}
		cout<<"\nEntered BitSet is: ";


		for(i = rbitSet.end() - 1; i!=rbitSet.begin(); i--){
			bitSet.push_back(*i);
		}
		bitSet.push_back(*rbitSet.begin());
		m = bitSet.size();

		for(i = bitSet.begin(); i!=bitSet.end(); i++){
			cout<<*i;
		}
		cout<<"\nCardinality of BitSet: ";

				cout<<m;
	}
	void redundantBits()
	{
		for(r = 0; r<10; r++){
			if(pow(2, r) >= m + r + 1){
				break;
			}
		}
		cout<<"\nNumber of Redundant Bits: "<<r;
	}

};
int main()
{
	HammingCodes hammingCodes;
	hammingCodes.getInput();
	hammingCodes.redundantBits();
}
